<UserControl x:Class="SchedulingSystemWPF.Views.DashboardOptions"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SchedulingSystemWPF.Views" xmlns:viewmodels="clr-namespace:SchedulingSystemWPF.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:DashboardViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="White">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <TextBlock Text="What would you like to do?" 
                   FontSize="15" 
                   FontWeight="DemiBold" 
                   Margin="0,0,0,10" 
                   HorizontalAlignment="Center"/>

        <StackPanel Width="250">
            <Button Content="View All Appointments" Click="ViewAllAppointments_Click" Margin="0 0 0 10" Cursor="Hand" Style="{StaticResource SecondaryButton}"/>
        </StackPanel>

        <StackPanel Width="250">
            <Button Content="View All Customers" Click="ViewAllCustomers_Click" Margin="0 0 0 10" Cursor="Hand" Style="{StaticResource SecondaryButton}"/>
        </StackPanel>

        <StackPanel Width="250" Margin="0 15 0 0">
            <Button Content="Add New Appointment" Click="AddAppointment_Click"  Margin="0 0 0 10" Cursor="Hand" Style="{StaticResource SecondaryButton}"/>
        </StackPanel>

        <StackPanel Width="250">
            <Button Content="Add New Customer" Click="AddCustomer_Click"  Margin="0 0 0 10" Cursor="Hand" Style="{StaticResource SecondaryButton}"/>
        </StackPanel>

        <StackPanel Width="250" Margin="0 15 0 0">
            <Button Content="View Calendar" Click="ViewCalendar_Click"  Margin="0 0 0 10" Cursor="Hand" Style="{StaticResource PrimaryButton}"/>
        </StackPanel>
        
        <StackPanel Width="250">
            <Button Content="View Reports" Click="ViewReports_Click"  Margin="0 0 0 10" Cursor="Hand" Style="{StaticResource PrimaryButton}"/>
        </StackPanel>
    </StackPanel>
</UserControl>
