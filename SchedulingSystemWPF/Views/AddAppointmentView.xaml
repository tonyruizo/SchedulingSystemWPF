<UserControl x:Class="SchedulingSystemWPF.Views.AddAppointmentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SchedulingSystemWPF.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="White">

    <Grid Margin="10" VerticalAlignment="Center">

        <StackPanel HorizontalAlignment="Center" Width="500">
            
            <!--Heading-->
            <TextBlock 
                Text="Add New Appointment"
                FontSize="15"
                FontWeight="DemiBold" 
                Margin="0,0,0,10"
                HorizontalAlignment="Center"/>
            
            <!--Form-->
            <Grid HorizontalAlignment="Stretch">
                <Grid HorizontalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width ="250"/>
                        <ColumnDefinition Width="250"/>
                    </Grid.ColumnDefinitions>

                    <!--Left Column-->
                    <StackPanel Grid.Column="0" Margin="10">
                        <TextBlock Text="Customer Name" />
                        <TextBox Margin="0,0,0,10"/>
                    </StackPanel>

                    <!--Right Column-->
                    <StackPanel Grid.Column="1" Margin="10">
                        <TextBlock Text="Customer Address" />
                        <TextBox Margin="0,0,0,10"/>
                    </StackPanel>

                </Grid>
            </Grid>

            <!--Buttons-->
            <Grid HorizontalAlignment="Stretch" Margin="0,10">
                <Grid HorizontalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <Button 
                        Content="Back" 
                        Grid.Column="0"
                        HorizontalAlignment="Left"
                        Click="Back_Click" 
                        Cursor="Hand" 
                        Margin="5"  
                        Style="{StaticResource PrimaryButton}"/>
                    <StackPanel Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Right">
                        <Button Content="Add " Grid.Column="1" Click="Add_Click" Margin="5" Cursor="Hand" Style="{StaticResource SecondaryButton}"/>
                    </StackPanel>
                </Grid>

            </Grid>

        </StackPanel>
        
    </Grid>
</UserControl>
